{
  "browserSupport": ["> 1%", "last 2 versions"],
  "locations" : {
    "node_modules": "./node_modules",
    "styles" : {
      "src": "components/",
      "dist": "css/"
    }
  },
  "styles" : {
    "minify" : false,
    "compass" :  false,
    "exclude" : [],
    "sourceMaps" : {
      "generate" :  true,
      "location" : "/",
      "loadMaps" : false,
      "identityMap" : false,
      "debug" : false,
      "addComment" : true,
      "includeContent" : true,
      "charset" : "utf8",
      "destPath" : "",
      "sourceMappingUrlPrefix" : ""
    },
    "pxToRem": {
      "enabled": false,
      "settings": {
        "rootValue": 16,
        "replace": false
      }
    }
  }
}