{
  "locations" : {
    "dist": "dist",
    "patterns": [
      {
        "directory": "components",
        "pattern": "**/!(*.stories|*.component|*.min|*.test).es6.js"
      },
      {
        "directory": "components",
        "pattern": "**/!(*.stories|*.component|*.min|*.test|_*).scss"
      }
    ]
  },
  "styles": {
    "resources": [
      "components/01-base/global.scss"
    ]
  },
  "handlers": {
    "javascript": true,
    "styles": true,
    "assets": true
  },
  "bundler" : {
    "destination": {
      "flat": false
    },
    "js": {
      "output": {
        "filename": "[name].bundle.js",
        "publicpath": null
      }
    }
  }
}
